<Window x:Class="Ultimate_Game_Winner.UserControls_and_Windows.AreYouSure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ultimate_Game_Winner"
        mc:Ignorable="d"
        Title="AreYouSure" Height="200" Width="400">
    <Grid>
        <Label Content="Are you sure?" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" FontSize="50"/>
        <Label Content="This action is permanent and cannot be undone." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        <Button x:Name="ConfirmBtn" Content="Confirm" HorizontalAlignment="Left" Margin="83,116,0,0" VerticalAlignment="Top" Height="34" Width="61" Click="ConfirmBtn_Click"/>
        <Button x:Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="252,116,0,0" VerticalAlignment="Top" Height="34" Width="61" Click="CancelBtn_Click"/>

    </Grid>
</Window>
