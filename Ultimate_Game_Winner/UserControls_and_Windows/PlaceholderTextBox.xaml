<UserControl x:Class="Ultimate_Game_Winner.UserControls_and_Windows.PlaceholderTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ultimate_Game_Winner.UserControls_and_Windows"
             mc:Ignorable="d" 
             d:DesignHeight="18" d:DesignWidth="100" Background="White">
    <Grid>
        <TextBlock x:Name="tbPlaceholder" Text="Placeholder Text" Foreground="LightGray" Margin="5,0,0,0" VerticalAlignment="Center" Width="100"/>
        <TextBox x:Name="Input" Height="18" VerticalContentAlignment="Center" Width="100" Background="{x:Null}" TextChanged="Input_TextChanged"/>
    </Grid>
</UserControl>
