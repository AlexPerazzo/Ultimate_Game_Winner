<Page x:Class="Ultimate_Game_Winner.Main_Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ultimate_Game_Winner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="71"/>
            <RowDefinition Height="90"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>
        
        <!--Title-->
        <Label Content="Settings" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic" FontWeight="Bold" FontFamily="Verdana" FontStretch="Normal"/>
        <Rectangle Height="3" VerticalAlignment="Bottom" Width="550" Fill="Black"/>


        <!--Ranking System-->
        <TextBlock Text="Ranking System" FontSize="25" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Grid.Row="1"/>
        <ComboBox Height="20" Width="100" Margin="0,0,0,10" VerticalAlignment="Bottom" Grid.Row="1">
            <ComboBoxItem Content="Normal" IsSelected="True"/>
            <ComboBoxItem Content="Custom"/>
        </ComboBox>
        
        <!--Delete Entire Log-->
        <Button Name="DeleteLog" Margin="0,0,0,0" Content="Delete Entire Log" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Click="DeleteLog_Click" Grid.Row="3"/>
    </Grid>
</Page>
