<Page x:Class="Ultimate_Game_Winner.Main_Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ultimate_Game_Winner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings"
      Background="White">

    <Grid>
        <Button Name="DeleteLog" Margin="0,0,0,300" Content="Delete Entire Log" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Click="DeleteLog_Click"/>

        <TextBlock Text="Ranking System" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,150" TextWrapping="Wrap"  VerticalAlignment="Center"/>
        <ComboBox Height="20" Width="100" Margin="0,0,0,75">
            <ComboBoxItem Content="Normal" IsSelected="True"/>
            <ComboBoxItem Content="Custom"/>
        </ComboBox>
        <Button x:Name="TextEditor" Content="Button" HorizontalAlignment="Left" Margin="128,75,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Page>
